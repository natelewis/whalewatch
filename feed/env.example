# Alpaca API Configuration (for stock data)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
# ALPACA_LOG_REQUESTS=true  # Log all Alpaca API requests for debugging

# Polygon.io API Configuration (for options data only)
POLYGON_API_KEY=your_polygon_api_key_here

# Polygon.io S3 Configuration (for flat files access)
POLYGON_ACCESS_KEY=your_polygon_access_key_here
POLYGON_SECRET_KEY=your_polygon_secret_key_here

# Request Logging Configuration
# POLYGON_LOG_REQUESTS=true  # Log all Polygon API requests for debugging
# Set to false or omit to disable request logging

# Option Data Configuration
# POLYGON_SKIP_OPTION_TRADES=false  # Skip option trades ingestion (true/false)
# POLYGON_SKIP_OPTION_QUOTES=false  # Skip option quotes ingestion (true/false)
# POLYGON_SKIP_OPTION_CONTRACTS=false  # Skip option contracts ingestion (true/false)
# ALPACA_SKIP_STOCK_AGGREGATES=false  # Skip stock aggregates backfill (true/false)
# POLYGON_OPTION_CONTRACTS_LIMIT=1000  # Limit for option contracts per API request (default: 1000)
# POLYGON_OPTION_QUOTES_LIMIT=50000  # Limit for option quotes per API request (default: 50000, valid range: 1000-50000)
# POLYGON_OPTION_TRADE_VALUE_THRESHOLD=10000  # Minimum trade value threshold in dollars (default: 10000)

# Rate Limiting Configuration (adjust based on your Polygon.io plan)
# POLYGON_REQUESTS_PER_SECOND=1.5    # Max requests per second
# POLYGON_REQUESTS_PER_MINUTE=90     # Max requests per minute
# The system will use the more restrictive limit

# QuestDB Configuration
QUESTDB_HOST=127.0.0.1
QUESTDB_PORT=9000
QUESTDB_USER=admin
QUESTDB_PASSWORD=quest

# Application Configuration
LOG_LEVEL=info
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Backfill Configuration
# BACKFILL_MAX_DAYS=30  # Maximum number of days to backfill from the specified date
# Set to 0 for no limit (not recommended for large datasets)
# Set to 30 to limit backfill to 30 days from the specified date

# Ticker Configuration (optional - comma-separated list)
# If not set, uses default tickers from config
# TICKERS=AAPL,MSFT,GOOGL,AMZN,TSLA,SPY,QQQ
