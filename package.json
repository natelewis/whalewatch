{
  "name": "whalewatch",
  "version": "1.0.0",
  "description": "Options and portfolio analysis application",
  "main": "index.js",
  "scripts": {
    "predev": "pkill -f 'tsx watch' || true; pkill -f 'vite' || true",
    "dev": "concurrently \"npm run server:dev\" \"npm run dashboard:dev\"",
    "server:dev": "cd server && npm run dev",
    "dashboard:dev": "cd dashboard && npm run dev",
    "build": "npm run server:build && npm run dashboard:build",
    "server:build": "cd server && npm run build",
    "dashboard:build": "cd dashboard && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../dashboard && npm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20"
  },
  "workspaces": [
    "server",
    "dashboard"
  ]
}
